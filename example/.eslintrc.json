{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "project": "tsconfig.json"
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "globals": {
    "JSX": true
  },
  "extends": ["next/core-web-vitals"],
  "root": true,
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/jsx-filename-extension": [1, { "extensions": [".ts", ".tsx"] }]
  }
}
